{
  "kind": "collectionType",
  "collectionName": "comics",
  "info": {
    "singularName": "comic",
    "pluralName": "comics",
    "displayName": "Comic",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "description": {
      "type": "text",
      "required": true
    },
    "thumbnail": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "comic_chapters": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::comic-chapter.comic-chapter",
      "mappedBy": "comic"
    },
    "url": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "type": {
      "type": "enumeration",
      "enum": [
        "single_volume",
        "multi_volume",
        "strip"
      ],
      "required": true,
      "default": "multi_volume"
    }
  }
}
